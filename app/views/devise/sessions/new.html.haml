.contents
  %h2.login ログインページ
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .field__address
      メールアドレス
    .field__email
      = f.label :email, class:"field__label" do
        %i.far.fa-envelope
        = f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"PC、携帯どちらでも可", class:"field__input"

    .field__pass
      パスワード
    .field__pass
      = f.label :password, class:"field__label" do
        %i.fas.fa-key
        = f.password_field :password, autocomplete: "current-password", placeholder:"６文字以上の英数字",class:"field__input" 
    .actions__new
      = f.submit "ログイン"

    .new
      新規会員登録は
      = link_to signup_regisrations_path, class:"new__btn" do
        こちらから

